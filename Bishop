package chess;

public class Bishop extends ChessPiece{

  public Bishop(Player player){
    super(player);
  }
  
  public String type(){
    return "Bishop";
  }
  
  public boolean isValidMove(Move move, IChessPiece[][] board){
    //Valid bishop moves: Any diagonal direction.
    //                : Take an enemy piece from any valid direction. 
    // Return false if any of these cases are FALSE
  
    //Checks to see if the superclass isValidMove is false.
    if(super.isValidMove(move, board) == false)
      return false;
      
    //Checks to see if the Bishop is moving over empty squares.
    if(super.moveIsOnlyOverEmptySquares(move, board) == false)
      return false;
      
    //Checks to see if the piece is moving diagonally.
    if(move.fromColumn == move.toColumn || move.fromRow == move.toRow)
      return false;
      
    else
      return true;
  }

}
